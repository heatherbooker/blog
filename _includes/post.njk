---
layout: base.njk
---
<a class="btn" href="{{ metadata.url }}" >
  Home
</a>

<div id="post">
  <header class="post-header">
    <h1 title="{{ title }}">{{ title }}</h1>
    <span class="post-meta">
      <time class="post-date" datetime="{{ page.date | htmlDateString }}">
        {{ page.date | readableDate | upper }}
      </time>
      {% if page.data.tags.size > 0 %}
      •
      {% for tag in page.data.tags %}
        <a class="post-tag" href="{{ metadata.url }}tags/#{{ tag }}">{{ tag }}</a>
        {% if not loop.last %}
        <span>•</span>
        {% endif %}
      {% endfor %}
      {% endif %}
    </span>

  </header>

  <article class="post-content">
    {{ content | safe }}
  </article>

  {% include 'footer-post-nav.njk' %}
</div>
