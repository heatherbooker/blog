---
layout: base.njk
templateClass: tmpl-post
---
<a class="btn" href="{{ site.url }}/" >
  Home
</a>

<div id="post">
  <header class="post-header">
    <h1 title="{{ page.title }}">{{ page.title }}</h1>
    <span class="post-meta">
      <time class="post-date" datetime="{{ page.date | htmlDateString }}">
        {{ page.date | readableDate | upper }}
      </time>
      {% if page.data.tags.size > 0 %}
      •
      {% for tag in page.data.tags %}
        <a class="post-tag" href="{{ site.url }}/tags/#{{ tag }}">{{ tag }}</a>
        {% if not loop.last %}
        <span>•</span>
        {% endif %}
      {% endfor %}
      {% endif %}
    </span>

  </header>

  <article class="post-content">
    {{ content | safe }}
  </article>

</div>
